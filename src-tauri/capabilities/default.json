{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "cors-fetch:default",
    "store:default",
    {
      "identifier": "http:default",
      "allow": [
        {
          "url": "http://**"
        },
        {
          "url": "https://**"
        }
      ]
    },
    "http:default",
    "http:default",
    "os:default"
  ],
  "remote": {
    "urls": [
      "http://127.0.0.1:*"
    ]
  }
}