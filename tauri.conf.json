{
  "$schema": "./node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "zanshin",
  "version": "2.5.4",
  "identifier": "com.zanshin.app",
  "build": {
    "frontendDist": "./dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "zanshin",
        "width": 1300,
        "height": 800,
        "minWidth": 900,
        "minHeight": 670,
        "resizable": true,
        "fullscreen": false,
        "decorations": false,
        "transparent": false
      }
    ],
    "security": {
      "csp": null,
      "dangerousDisableAssetCspModification": true
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "allowDowngrades": false,
      "wix": {
        "language": "en-US"
      },
      "nsis": {
        "displayLanguageSelector": false,
        "languages": ["en-US"]
      }
    },
    "iOS": {
      "developmentTeam": ""
    },
    "android": {
      "minSdkVersion": 24
    }
  }
}
