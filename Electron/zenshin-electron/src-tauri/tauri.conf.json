{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "zenshin",
  "version": "2.5.4",
  "identifier": "com.zenshin.app",
  "build": {
    "frontendDist": "../out/renderer",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "electron-vite dev --mode tauri",
    "beforeBuildCommand": "electron-vite build"
  },
  "app": {
    "windows": [
      {
        "title": "zenshin",
        "width": 1300,
        "height": 800,
        "minWidth": 900,
        "minHeight": 670,
        "resizable": true,
        "fullscreen": false,
        "decorations": false,
        "transparent": false,
        "url": "zenshin"
      }
    ],
    "security": {
      "csp": null,
      "dangerousDisableAssetCspModification": true
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "allowDowngrades": false,
      "wix": {
        "language": "en-US"
      },
      "nsis": {
        "displayLanguageSelector": false,
        "languages": ["en-US"]
      }
    }
  }
}
